// Simple VM Benchmark - Only supported features
// Tests VM performance without functions

print("⚡ Simple VM Performance Benchmark")
print("==================================")

// Test 1: Arithmetic operations
print("\n🧮 Testing arithmetic operations...")
var sum = 0
var i = 0
while (i < 50000) {
    sum = sum + i * 2 - 1
    if (i > 25000) {
        sum = sum / 2
    }
    i = i + 1
}
print("Arithmetic result:", sum)

// Test 2: Comparison operations
print("\n📊 Testing comparison operations...")
var count = 0
i = 0
while (i < 30000) {
    if (i > 10000) {
        if (i < 20000) {
            count = count + 1
        }
    }
    i = i + 1
}
print("Comparison count:", count)

// Test 3: String concatenation
print("\n📝 Testing string operations...")
var text = "Start"
i = 0
while (i < 500) {
    text = text + "X"
    i = i + 1
}
print("String length:", len(text))

// Test 4: Nested loops
print("\n🔄 Testing nested loops...")
var nested_result = 0
var outer = 0
while (outer < 200) {
    var inner = 0
    while (inner < 200) {
        nested_result = nested_result + outer + inner
        inner = inner + 1
    }
    outer = outer + 1
}
print("Nested loops result:", nested_result)

// Test 5: Complex arithmetic with modulus
print("\n🔢 Testing modulus operations...")
var mod_sum = 0
i = 1
while (i < 10000) {
    if (i % 3 == 0) {
        mod_sum = mod_sum + i
    }
    if (i % 5 == 0) {
        mod_sum = mod_sum - i / 2
    }
    i = i + 1
}
print("Modulus result:", mod_sum)

print("\n✅ Simple VM benchmark completed!")
print("This test uses only VM-supported features:")
print("  • Arithmetic operations (+, -, *, /, %)")
print("  • Comparison operations (>, <, ==, !=)")
print("  • String concatenation")
print("  • While loops and if statements")
print("  • Variable assignments")
