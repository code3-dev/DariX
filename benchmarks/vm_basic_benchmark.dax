// Basic VM Benchmark - Minimal features only
// Tests VM performance with basic operations

print("⚡ Basic VM Performance Benchmark")
print("=================================")

// Test 1: Simple arithmetic
print("\n🧮 Testing arithmetic...")
var sum = 0
var i = 0
while (i < 10000) {
    sum = sum + i * 2
    i = i + 1
}
print("Sum:", sum)

// Test 2: Comparisons
print("\n📊 Testing comparisons...")
var count = 0
i = 0
while (i < 5000) {
    if (i > 2500) {
        count = count + 1
    }
    i = i + 1
}
print("Count:", count)

// Test 3: String operations
print("\n📝 Testing strings...")
var text = "Hello"
text = text + " World"
text = text + "!"
print("Text:", text)

// Test 4: Nested loops
print("\n🔄 Testing nested loops...")
var result = 0
var outer = 0
while (outer < 100) {
    var inner = 0
    while (inner < 100) {
        result = result + 1
        inner = inner + 1
    }
    outer = outer + 1
}
print("Result:", result)

// Test 5: Modulus
print("\n🔢 Testing modulus...")
var mod_result = 0
i = 1
while (i < 1000) {
    var remainder = i % 3
    if (remainder == 0) {
        mod_result = mod_result + i
    }
    i = i + 1
}
print("Mod result:", mod_result)

print("\n✅ Basic VM benchmark completed!")
